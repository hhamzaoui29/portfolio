<html lang="fr">

<head>
  <meta charset="UTF-8">
  <title>Modifier la note</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/portfolio.css"> 
</head>

<body class="bg-light">
     <!-- Barre de navigation -->
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <!-- Bouton hamburger (mobile) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Lien absolu vers ton portfolio -->
          <h1 class="h1">
            <a href="/portfolio" class="btn btn-secondary">⬅️ ACCUEIL</a>
          </h1>
        </div>
      </div>
    </nav>
  <div class="container py-4">
    <h1 class="mb-4"> ✏️ Modifier la réservation</h1>

    <form action="/reservations/updateReservation/<%= reservation.id %>" method="POST" class="card p-4 shadow-sm bg-white rounded">
      <div class="mb-3">
        <label for="nom" class="form-label">Nom</label>
        <input type="text" name="nom" id="nom" class="form-control" value="<%= reservation.nom %>" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= reservation.email %>" required>
      </div>

      <div class="mb-3">
        <label for="telephone" class="form-label">Téléphone</label>
        <input type="text" name="telephone" id="telephone" class="form-control" value="<%= reservation.telephone %>" required>
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date du rendez-vous</label>
        <input type="date" name="date" id="date" class="form-control" value="<%= reservation.date %>" required>
      </div>

      <div class="mb-3">
        <label for="heure" class="form-label">Heure</label>
        <input type="time" name="heure" id="heure" class="form-control" value="<%= reservation.heure %>" required>
      </div>

      <div class="mb-3">
        <label for="service" class="form-label">Service</label>
        <select name="service" id="service" class="form-select" required>
          <option value="Plomberie" <%= reservation.service === "Plomberie" ? "selected" : "" %>>Plomberie</option>
          <option value="Électricité" <%= reservation.service === "Électricité" ? "selected" : "" %>>Électricité</option>
          <option value="Peinture" <%= reservation.service === "Peinture" ? "selected" : "" %>>Peinture</option>
          <option value="Menuiserie" <%= reservation.service === "Menuiserie" ? "selected" : "" %>>Menuiserie</option>
          <option value="Autre" <%= reservation.service === "Autre" ? "selected" : "" %>>Autre</option>
        </select>
      </div>

      <button type="submit" class="btn btn-warning">✏️ Modifier</button>
      <a href="/reservations" class="btn btn-secondary">⬅️ Retour</a>
    </form>
  </div>
    <!-- Footer -->
<footer class="bg-light text-center py-4 mt-5">
  <p class="mb-1">&copy; <%= new Date().getFullYear() %> Hamzaoui Hamid - Tous droits réservés.</p>

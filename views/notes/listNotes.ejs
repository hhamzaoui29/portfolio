<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Liste des notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/portfolio.css"> 
</head>
<body class="bg-light">
     <!-- Barre de navigation -->
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <!-- Bouton hamburger (mobile) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Lien absolu vers ton portfolio -->
          <h1 class="h1">
            <a href="/projets" class="btn btn-secondary">⬅️ Retour à Liste Des Projets</a>
          </h1>
        </div>
      </div>
    </nav>
  <div class="container py-4">
    <h1 class="mb-4"> 📝 Bloc-notes</h1>

    <!-- Bouton créer une nouvelle note -->
    <a href="/notes/formCreateNote" class="btn btn-primary mb-3">➕ Nouvelle note</a>

    <!-- Tableau des notes -->
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Titre</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (notes.length > 0) { %>
          <% notes.forEach(note => { %>
            <tr>
              <td><%= note.id %></td>
              <td><%= note.titre %></td>
              <td><%= note.date %></td>
              <td>
                <a href="/notes/showNote/<%= note.id %>"       class="btn btn-sm btn-info">    👁️ Afficher</a>
                <!--
                <a href="/notes/formUpdateNote/<%= note.id %>" class="btn btn-sm btn-warning"> ✏️ Modifier</a>
                
                <form action="/notes/deleteNote/<%= note.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">🗑️ Supprimer</button>
                </form>
                 -->
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">Aucune note pour le moment</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
    <!-- Footer -->
<footer class="bg-light text-center py-4 mt-5">
  <p class="mb-1">&copy; <%= new Date().getFullYear() %> Hamzaoui Hamid - Tous droits réservés.</p>
  <ul class="list-inline">
      <li class="list-inline-item"><a href="/contact">Nous contacter</a></li>
      <li class="list-inline-item"><a href="#">Confidentialité</a></li>
      <li class="list-inline-item"><a href="#">Conditions</a></li>
  </ul>
</footer>
</body>
</html>
